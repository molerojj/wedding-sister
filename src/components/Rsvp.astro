---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="rsvp" class="bg-black h-screen w-screen text-center relative">

	<div class="relative z-30 h-full flex flex-col items-center justify-center gap-16 lg:gap-10 pt-10">

		<h2 class="text-white text-6xl lg:text-8xl font-eye">{t('rsvp.title')}</h2>
	
		<p class="italic text-base text-white text-center">{t('rsvp.text')}</p>

        <a 
            href={t('rsvp.link')}
            target="_blank"
            class="font-semibold border-[3px] border-white text-white bg-white/5 backdrop-blur-sm rounded-full px-6 py-1 transition-colors hover:bg-white hover:text-gray-900">
            <div class="flex justify-center items-center gap-2">
                {t('rsvp.button')}
                <svg 
                    xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-whatsapp"  width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"    fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"></path>
                    <path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"></path>
                </svg>
            </div>
        </a>

        <p class="text-white italic text-xl px-14 lg:w-[660px]">
			<span class="font-eye text-3xl">
				{t('rsvp.phrase1')}&nbsp;
			</span>
			{t('rsvp.phrase2')}
		</p>

		<p class="text-white italic text-2xl text-end">{t('rsvp.bible')} 3:20-21</p>

	</div>
	

	<div class="absolute top-0 bottom-0 h-full w-full z-10 opacity-70">
		<img
			src="/foto-rsvp.jpg" 
			alt="Yeldy y Jack" 
			class=" object-cover w-full h-full hidden lg:block" 
		/>
		<img
			src="/foto-rsvp-mobile.jpg" 
			alt="Yeldy y Jack" 
			class=" object-cover w-full h-full lg:hidden" 
		/>
	</div>

</section>