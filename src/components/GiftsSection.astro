---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="gifts" class="bg-black h-screen w-screen text-center relative">

	<div class="relative z-30 h-full flex flex-col items-center pt-28">

		<h2 class="text-white text-6xl lg:text-8xl font-eye lg:pb-10">{t('gift.title')}</h2>
	
		<p class="italic text-xl lg:w-[660px] pt-10 px-12 text-white text-center">
			{t('gift.text1')} 
			<b>{t('gift.text2')}</b>
			{t('gift.text3')}
		</p>

        <div class="lg:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" class="text-white icon icon-tabler icon-tabler-cash" width="60" height="60" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M7 9m0 2a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2v6a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2z"></path>
                <path d="M14 14m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
                <path d="M17 9v-2a2 2 0 0 0 -2 -2h-10a2 2 0 0 0 -2 2v6a2 2 0 0 0 2 2h2"></path>
            </svg>
        </div>

	</div>
	

	<div class="absolute top-0 bottom-0 h-full w-full z-10 opacity-70">
		<img
			src="/foto-gifts.jpg" 
			alt="Yeldy y Jack" 
			class="object-cover object-center w-full h-full" 
		/>
	</div>

</section>